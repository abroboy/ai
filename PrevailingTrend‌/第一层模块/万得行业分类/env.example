# 万得行业分类模块环境变量配置示例
# 复制此文件为 .env 并修改相应的配置值

# =============================================================================
# 数据库配置
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=prevailing_trend
DB_USER=industry_user
DB_PASSWORD=your_password
DB_CHARSET=utf8mb4

# =============================================================================
# 万得Wind配置 (可选)
# =============================================================================
WIND_USERNAME=your_wind_username
WIND_PASSWORD=your_wind_password
WIND_SERVER=10.0.0.1
WIND_PORT=17011

# =============================================================================
# Tushare配置 (可选)
# =============================================================================
TUSHARE_TOKEN=your_tushare_token
TUSHARE_BASE_URL=http://api.tushare.pro

# =============================================================================
# AKShare配置 (可选)
# =============================================================================
AKSHARE_BASE_URL=http://push2.eastmoney.com

# =============================================================================
# Redis缓存配置 (可选)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/industry_classification.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# API服务配置
# =============================================================================
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=false
API_WORKERS=4

# =============================================================================
# 数据更新配置
# =============================================================================
UPDATE_FREQUENCY_HOURS=24
MAX_RETRY_TIMES=3
BATCH_SIZE=1000

# =============================================================================
# 监控配置
# =============================================================================
MONITORING_ENABLED=true
MONITORING_INTERVAL=300
ALERT_EMAIL=admin@example.com

# =============================================================================
# 安全配置
# =============================================================================
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# 性能配置
# =============================================================================
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
CACHE_TTL=3600
REQUEST_TIMEOUT=30 